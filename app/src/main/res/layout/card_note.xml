<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="2.5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:rippleColor="?attr/primary_ripple_color"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/card_color"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_t"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/muli_bold"
                android:maxLines="2"
                android:textColor="?attr/primary_text_color"
                android:textSize="16sp"
                tools:text="Title" />

            <ImageView
                android:id="@+id/tick_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_done"
                android:visibility="gone"
                app:tint="?attr/colorPrimary"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/body_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/work_sans"
            android:maxLines="5"
            android:textColor="?attr/primary_text_color"
            android:textSize="14sp"
            tools:text="Raheem\nyo" />

        <TextView
            android:id="@+id/edited_time_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/work_sans"
            android:textColor="?attr/primary_text_color"
            android:textSize="12sp"
            tools:text="October 19, 20:25" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>